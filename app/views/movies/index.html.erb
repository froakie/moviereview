<% if !user_signed_in? %>
  <div class="jumbotron">
    <h1>Your Favorite Movies Reviewed!</h1>
    <p>Sign up now to review your favorite movies with the friendliest movie enthusiasts on the web.</p>
    <p><%= link_to "Sign up to write a review!", new_user_registration_path, class: "btn btn-default btn-lg" %></p>
  </div>
<% end %>

<div class="row">
  <% @movies.each do |movie| %>
    <div class="col-sm-6 col-md-3">
      <div class="thumbnail">
        <%= link_to (image_tag movie.image.url(:medium), class: 'image'), movie %>
      </div>
    </div>
  <% end %>
</div>